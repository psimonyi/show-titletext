{
    "manifest_version": 2,
    "name": "Show comic title-text",
    "version": "3",
    "description": "Display the title-text below comic pages",

    "applications": {
        "gecko": {
            "id": "show-titletext@ns.petersimonyi.ca"
        }
    },

    "permissions": [
        "<all_urls>",
        "contextMenus",
        "storage",
        "webNavigation"
    ],

    "background": {
        "scripts": ["background.js"]
    },
    
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
